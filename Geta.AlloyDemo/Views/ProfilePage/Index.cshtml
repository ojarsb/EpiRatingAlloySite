@using AlloyDemoKit
@using AlloyDemoKit.Models.ViewModels

@model ProfilePageViewModel
<div class="row">
    <div class="span4">
        <div class="row">
            <div>
                @Html.PropertyFor(m => m.CurrentPage.ProfileHeader)
            </div>
            <hr />
            <div>
                @using (Html.BeginForm("Save", "ProfilePage"))
                {
                    <h4>First Name</h4>
                    @Html.EditorFor(m => m.Profile.FirstName)

                    <h4>Last Name</h4>
                    @Html.EditorFor(m => m.Profile.LastName)

                    <h4>Title</h4>
                    @Html.EditorFor(m => m.Profile.Title)

                    <h4>Email</h4>
                    @Html.EditorFor(m => m.Profile.Email)

                    <h4>Company</h4>
                    @Html.EditorFor(m => m.Profile.Company)


                    <input type="submit" value="Save Your Profile" class="btn btn-blue" />

                }
            </div>
            <div>
                @Html.PropertyFor(m => m.CurrentPage.LeftHandContentArea)
            </div>
        </div>
    </div>
    <div class="span8">
        <div>
            @Html.PropertyFor(m => m.CurrentPage.MainBody)
        </div>
        <br />
        <div>
            @Html.PropertyFor(m => m.CurrentPage.MainContentArea)
        </div>
    </div>
</div>
